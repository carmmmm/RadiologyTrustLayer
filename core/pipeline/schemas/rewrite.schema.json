{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Rewrite",
  "type": "object",
  "required": ["rewrites", "edited_report"],
  "properties": {
    "rewrites": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["claim_id", "original", "suggested", "reason"],
        "properties": {
          "claim_id": { "type": "string" },
          "original": { "type": "string" },
          "suggested": { "type": "string" },
          "reason": { "type": "string" }
        }
      }
    },
    "edited_report": { "type": "string" }
  }
}
