{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ClinicianSummary",
  "type": "object",
  "required": ["summary", "key_concerns", "recommendation"],
  "properties": {
    "summary": { "type": "string" },
    "key_concerns": {
      "type": "array",
      "items": { "type": "string" }
    },
    "recommendation": {
      "type": "string",
      "enum": ["approve", "review_recommended", "requires_revision"]
    },
    "confidence_note": { "type": "string" }
  }
}
