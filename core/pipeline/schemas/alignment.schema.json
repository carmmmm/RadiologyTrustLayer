{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Alignment",
  "type": "object",
  "required": ["alignments"],
  "properties": {
    "alignments": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["claim_id", "label", "evidence", "confidence"],
        "properties": {
          "claim_id": { "type": "string" },
          "label": {
            "type": "string",
            "enum": ["supported", "uncertain", "needs_review"]
          },
          "evidence": { "type": "string" },
          "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
          "related_finding_ids": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    }
  }
}
